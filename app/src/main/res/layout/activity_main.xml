<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.rongxianren.rxjava.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:onClick="mergeTest"
            android:text="Rx Merge Test"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:onClick="switcherSubscribeLight"
            android:text="Switcher Subscribe Light"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:onClick="threadSwitch"
            android:text="Thread Switch"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:onClick="simulateRxJava"
            android:text="Simulate Rxjava"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:onClick="backPressure"
            android:text="BackPressure"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:onClick="flowableBackPressure"
            android:text="Flowable BackPressure"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</ScrollView>
